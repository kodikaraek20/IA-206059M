# Define the range for even numbers
start = 1
end = 20  # You can adjust this to your desired range

# Initialize a list to store even numbers
even_numbers = []

# Generate even numbers and add them to the list
for number in range(start, end + 1):
    if number % 2 == 0:
        even_numbers.append(number)

# Calculate the sum of even numbers
even_sum = sum(even_numbers)

# Find the maximum and minimum even numbers in the list
if even_numbers:
    max_even = max(even_numbers)
    min_even = min(even_numbers)
else:
    max_even = None
    min_even = None

# Print the list of even numbers, their sum, and max/min values
print(f"Even numbers in the range {start}-{end}: {even_numbers}")
print(f"Sum of even numbers: {even_sum}")
print(f"Maximum even number: {max_even}")
print(f"Minimum even number: {min_even}")

